{% liquid
  assign block_st = block.settings
%}

<div class="product-installments-image-{{ block.id }}"
     {{ block.shopify_attributes }}
     style="margin-top: {{ block_st.margin_top }}px; margin-bottom: {{ block_st.margin_bottom }}px;">

  <style>
    .product-installments-image-{{ block.id }} img{
      width: 100%;
      height: auto;
      display: block;
      border-radius: {{ block_st.border_radius }}px;
    }
  </style>

  {% if block_st.installments_image != blank %}
    <img
      src="{{ block_st.installments_image | image_url: width: 1500 }}"
      alt="Cuotas sin intereses"
      loading="lazy"
      width="1500"
      height="auto">
  {% endif %}

</div>

{% schema %}
{
  "name": "Imagen Cuotas",
  "settings": [
    {
      "type": "image_picker",
      "id": "installments_image",
      "label": "Imagen de cuotas"
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Border radius",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Margen superior",
      "default": 10
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Margen inferior",
      "default": 10
    }
  ]
}
{% endschema %}
